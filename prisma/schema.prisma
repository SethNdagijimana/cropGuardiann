// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())
  email          String     @unique
  password       String
  name           String
  isEmailVerfied Boolean    @default(true)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @default(now())
  support        Support?
  feedback       Feedback?
  Insurance      Insurance?
}

model Support {
  id          Int           @id @default(autoincrement())
  userEmail   String        @unique
  userName    String
  user        User          @relation(fields: [userEmail], references: [email])
  phoneNumber String
  location    String
  userId      String
  insurance   InsuranceType
  support     SupportType
  message     String?
}

model Insurance {
  id        Int           @id @default(autoincrement())
  name      String
  email     String        @unique
  contact   String
  userId    String
  user      User          @relation(fields: [email], references: [email])
  insurance String
}

model Feedback {
  id        Int      @id @default(autoincrement())
  userEmail String   @unique
  user      User     @relation(fields: [userEmail], references: [email])
  feedback  String
  createdAt DateTime @default(now())
}

enum InsuranceType {
  Prime
  Sonarwa
  Radiant
}

enum SupportType {
  Equipment
  Seeds
  Advisor
  Other
}
