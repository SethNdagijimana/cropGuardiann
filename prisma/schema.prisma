// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())
  email          String     @unique
  password       String
  name           String
  isEmailVerfied Boolean    @default(false)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @default(now())
  support        Support?
  feedback       Feedback?
  insurances     Insurance[]
}

model Support {
  id          Int           @id @default(autoincrement())
  userEmail   String        @unique
  userName    String
  user        User          @relation(fields: [userEmail], references: [email])
  phoneNumber String
  location    String
  userId      String
  insurance   String
  support     String
  message     String?
}


model Insurance {
  id        Int       @id @default(autoincrement())
  name      String
  email     String
  contact   String
  userId    Int       // Changed to Int to reference the User ID
  user      User      @relation(fields: [userId], references: [id])
  insurance String
}


model Feedback {
  id        Int      @id @default(autoincrement())
  userEmail String   @unique
  user      User     @relation(fields: [userEmail], references: [email])
  feedback  String
  createdAt DateTime @default(now())
}

model emailToken {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  token     String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model resetPasswordToken {
  id        Int    @id @default(autoincrement())
  userId    String
  email     String
  token     String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum InsuranceType {
  Prime
  Sonarwa
  Radiant
}

enum SupportType {
  Equipment
  Seeds
  Advisor
  Other
}
